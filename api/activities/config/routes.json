{
  "routes": [
    {
      "method": "GET",
      "path": "/activities",
      "handler": "activities.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/activities/count",
      "handler": "activities.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/activities/:id",
      "handler": "activities.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/activities",
      "handler": "activities.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/activities/:id",
      "handler": "activities.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/activities/:id",
      "handler": "activities.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
