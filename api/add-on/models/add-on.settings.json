{
  "kind": "collectionType",
  "collectionName": "add_ons",
  "info": {
    "name": "add_on"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "screenshots": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "name": {
      "type": "richtext"
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "json"
    },
    "purchase_type": {
      "type": "string"
    },
    "pricing": {
      "type": "decimal"
    },
    "active": {
      "type": "boolean"
    },
    "path": {
      "type": "string"
    },
    "acquired_complements": {
      "via": "add_on",
      "collection": "acquired-complement"
    }
  }
}
