{
  "routes": [
    {
      "method": "GET",
      "path": "/addons",
      "handler": "addon.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/addons/count",
      "handler": "addon.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/addons/:id",
      "handler": "addon.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/addons",
      "handler": "addon.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/addons/:id",
      "handler": "addon.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/addons/:id",
      "handler": "addon.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
