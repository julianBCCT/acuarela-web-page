{
  "routes": [
    {
      "method": "GET",
      "path": "/addressees",
      "handler": "addressee.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/addressees/count",
      "handler": "addressee.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/addressees/:id",
      "handler": "addressee.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/addressees",
      "handler": "addressee.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/addressees/:id",
      "handler": "addressee.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/addressees/:id",
      "handler": "addressee.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
