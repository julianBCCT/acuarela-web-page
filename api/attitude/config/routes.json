{
  "routes": [
    {
      "method": "GET",
      "path": "/attitudes",
      "handler": "attitude.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/attitudes/count",
      "handler": "attitude.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/attitudes/:id",
      "handler": "attitude.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/attitudes",
      "handler": "attitude.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/attitudes/:id",
      "handler": "attitude.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/attitudes/:id",
      "handler": "attitude.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
