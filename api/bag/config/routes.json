{
  "routes": [
    {
      "method": "GET",
      "path": "/bags",
      "handler": "bag.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/bags/count",
      "handler": "bag.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/bags/:id",
      "handler": "bag.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/bags",
      "handler": "bag.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/bags/:id",
      "handler": "bag.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/bags/:id",
      "handler": "bag.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
