{
  "routes": [
    {
      "method": "GET",
      "path": "/blogs",
      "handler": "blog.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/blogs/count",
      "handler": "blog.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/blogs/:id",
      "handler": "blog.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/blogs",
      "handler": "blog.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/blogs/:id",
      "handler": "blog.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/blogs/:id",
      "handler": "blog.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
