{
  "routes": [
    {
      "method": "GET",
      "path": "/chats",
      "handler": "chat.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/chats/count",
      "handler": "chat.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/chats/:id",
      "handler": "chat.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/chats",
      "handler": "chat.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/chats/:id",
      "handler": "chat.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/chats/:id",
      "handler": "chat.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
