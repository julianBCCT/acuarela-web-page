{
  "routes": [
    {
      "method": "GET",
      "path": "/checklists",
      "handler": "checklist.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/checklists/count",
      "handler": "checklist.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/checklists/:id",
      "handler": "checklist.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/checklists",
      "handler": "checklist.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/checklists/:id",
      "handler": "checklist.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/checklists/:id",
      "handler": "checklist.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
