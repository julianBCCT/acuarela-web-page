{
  "routes": [
    {
      "method": "GET",
      "path": "/checklistitems",
      "handler": "checklistitem.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/checklistitems/count",
      "handler": "checklistitem.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/checklistitems/:id",
      "handler": "checklistitem.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/checklistitems",
      "handler": "checklistitem.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/checklistitems/:id",
      "handler": "checklistitem.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/checklistitems/:id",
      "handler": "checklistitem.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
