{
  "routes": [
    {
      "method": "GET",
      "path": "/comments",
      "handler": "comment.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/comments/count",
      "handler": "comment.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/comments/:id",
      "handler": "comment.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/comments",
      "handler": "comment.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/comments/:id",
      "handler": "comment.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/comments/:id",
      "handler": "comment.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
