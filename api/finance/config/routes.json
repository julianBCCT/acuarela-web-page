{
  "routes": [
    {
      "method": "GET",
      "path": "/finances",
      "handler": "finance.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/finances/count",
      "handler": "finance.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/finances/:id",
      "handler": "finance.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/finances",
      "handler": "finance.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/finances/:id",
      "handler": "finance.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/finances/:id",
      "handler": "finance.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
