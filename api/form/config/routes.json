{
  "routes": [
    {
      "method": "GET",
      "path": "/forms",
      "handler": "form.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/forms/count",
      "handler": "form.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/forms/:id",
      "handler": "form.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/forms",
      "handler": "form.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/forms/:id",
      "handler": "form.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/forms/:id",
      "handler": "form.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
