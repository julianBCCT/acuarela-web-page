{
  "routes": [
    {
      "method": "GET",
      "path": "/locations",
      "handler": "location.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/locations/count",
      "handler": "location.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/locations/:id",
      "handler": "location.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/locations",
      "handler": "location.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/locations/:id",
      "handler": "location.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/locations/:id",
      "handler": "location.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
