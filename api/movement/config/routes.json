{
  "routes": [
    {
      "method": "GET",
      "path": "/movements",
      "handler": "movement.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/movements/count",
      "handler": "movement.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/movements/:id",
      "handler": "movement.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/movements",
      "handler": "movement.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/movements/:id",
      "handler": "movement.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/movements/:id",
      "handler": "movement.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/movements/paypal/getandverify",
      "handler": "movement.getAndVerify",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/movements/paypal/configure",
      "handler": "movement.configure",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/movements/paypal/cancelaggremet",
      "handler": "movement.cancel_aggrement",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/movements/paypal/createaggrement",
      "handler": "movement.create_aggrement",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/movements/paypal/successaggrement",
      "handler": "movement.success_aggrement",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
