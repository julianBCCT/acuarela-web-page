{
  "routes": [
    {
      "method": "GET",
      "path": "/movements",
      "handler": "movement.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/movements/count",
      "handler": "movement.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/movements/:id",
      "handler": "movement.findOne",
      "config": {}
    },
    {
      "method": "GET",
      "path": "/movements/byuser",
      "handler": "movement.findByUser",
      "config": {}
    },
    {
      "method": "POST",
      "path": "/movements",
      "handler": "movement.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/movements/:id",
      "handler": "movement.update",
      "config": {}
    },
    {
      "method": "DELETE",
      "path": "/movements/:id",
      "handler": "movement.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
