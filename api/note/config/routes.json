{
  "routes": [
    {
      "method": "GET",
      "path": "/notes",
      "handler": "note.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/notes/count",
      "handler": "note.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/notes/:id",
      "handler": "note.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/notes",
      "handler": "note.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/notes/:id",
      "handler": "note.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/notes/:id",
      "handler": "note.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
