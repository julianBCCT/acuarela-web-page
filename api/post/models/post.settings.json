{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "content": {
      "type": "text"
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "acuarelauser": {
      "via": "posts",
      "model": "acuarelauser"
    },
    "date": {
      "type": "datetime"
    },
    "reactions": {
      "type": "json"
    },
    "comments": {
      "type": "json"
    }
  }
}
