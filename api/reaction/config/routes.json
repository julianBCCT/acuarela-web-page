{
  "routes": [
    {
      "method": "GET",
      "path": "/reactions",
      "handler": "reaction.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/reactions/count",
      "handler": "reaction.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/reactions/:id",
      "handler": "reaction.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/reactions",
      "handler": "reaction.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/reactions/:id",
      "handler": "reaction.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/reactions/:id",
      "handler": "reaction.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
