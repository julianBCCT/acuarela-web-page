        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "path": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "children": {
      "via": "records",
      "collection": "children"
    }
  }
}
