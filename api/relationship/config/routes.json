{
  "routes": [
    {
      "method": "GET",
      "path": "/relationships",
      "handler": "relationship.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/relationships/count",
      "handler": "relationship.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/relationships/:id",
      "handler": "relationship.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/relationships",
      "handler": "relationship.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/relationships/:id",
      "handler": "relationship.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/relationships/:id",
      "handler": "relationship.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
