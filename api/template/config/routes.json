{
  "routes": [
    {
      "method": "GET",
      "path": "/templates",
      "handler": "template.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/templates/count",
      "handler": "template.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/templates/:id",
      "handler": "template.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/templates",
      "handler": "template.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/templates/:id",
      "handler": "template.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/templates/:id",
      "handler": "template.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
